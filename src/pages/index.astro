  <script>
    // Variables para el navbar dinámico
    let ticking = false;

    // Función para actualizar el navbar con transición ultra suave
    function updateNavbar() {
      const navbar = document.getElementById('navbar');
      if (!navbar) return;

      const scrollY = window.scrollY;
      const maxScroll = 300; // Distancia extendida para transición más suave

      // Calcular progreso con curva suave (smoothstep)
      const progress = Math.min(scrollY / maxScroll, 1);
      const easedProgress = progress * progress * (3 - 2 * progress);

      // Valores graduales más sutiles
      if (scrollY > 0) {
        const bgOpacity = easedProgress * 0.92;
        const blurAmount = easedProgress * 10;
        const shadowOpacity = easedProgress * 0.08;
        const borderOpacity = easedProgress * 0.08;

        navbar.style.setProperty(
          'background-color',
          `rgba(255, 255, 255, ${bgOpacity})`,
          'important'
        );
        navbar.style.setProperty(
          'backdrop-filter',
          `blur(${blurAmount}px)`,
          'important'
        );
        navbar.style.setProperty(
          '-webkit-backdrop-filter',
          `blur(${blurAmount}px)`,
          'important'
        );
        navbar.style.setProperty(
          'box-shadow',
          `0 4px 12px -2px rgba(0, 0, 0, ${shadowOpacity})`,
          'important'
        );
        navbar.style.setProperty(
          'border-bottom',
          `1px solid rgba(30, 64, 175, ${borderOpacity})`,
          'important'
        );
      } else {
        navbar.style.setProperty(
          'background-color',
          'transparent',
          'important'
        );
        navbar.style.setProperty('backdrop-filter', 'none', 'important');
        navbar.style.setProperty(
          '-webkit-backdrop-filter',
          'none',
          'important'
        );
        navbar.style.setProperty('box-shadow', 'none', 'important');
        navbar.style.setProperty('border-bottom', 'none', 'important');
      }
      ticking = false;
    }

    // Event listener optimizado para scroll
    window.addEventListener('scroll', function () {
      if (!ticking) {
        requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    });

    // Inicialización
    document.addEventListener('DOMContentLoaded', function () {
      const navbar = document.getElementById('navbar');
      if (navbar) {
        navbar.style.setProperty(
          'background-color',
          'transparent',
          'important'
        );
        navbar.style.setProperty('backdrop-filter', 'none', 'important');
        navbar.style.setProperty(
          '-webkit-backdrop-filter',
          'none',
          'important'
        );
        navbar.style.setProperty('box-shadow', 'none', 'important');
        navbar.style.setProperty('border-bottom', 'none', 'important');
      }
    });

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const href = anchor.getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
