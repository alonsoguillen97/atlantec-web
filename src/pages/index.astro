          const href = (link as HTMLAnchorElement).getAttribute('href');
          
          // Only close menu for anchor links (#), not external links
          if (isMenuOpen && href && href.startsWith('#')) {
            toggleMenu(event);
          }
          // For external links like /blog, let the navigation proceed normally
        });
      });

      // Close menu when clicking outside
