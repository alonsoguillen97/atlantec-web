      if (mobileMenuButton) {
        mobileMenuButton.addEventListener('click', function(event) {

          event.preventDefault();
          event.stopPropagation();
          event.stopImmediatePropagation();
          toggleMenu(event);
          return false;
        }, true); // Use capture phase
      } else {
        console.error('Mobile menu button not found');
