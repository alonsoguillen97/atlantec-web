{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "astro",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    {
      "src": "/blog/(.*)$",
      "dest": "/blog/$1.html"
    },
    {
      "src": "/blog$",
      "dest": "/blog.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}